<h2>Search Authors</h2>
<form action="/Authors" method="GET">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>"> <!-- shows the author's name we looked for from the author's route get function-->
    <button type="submit">Search</button>
</form>
<br>
<% authors.forEach(author => { %>
    <div><%= author.name %></div>
<% }) %>